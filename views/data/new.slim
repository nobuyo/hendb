h1 Add Univ Data
form action='/data/create' method='post'
  fieldset
    p
      label for="name"  大学名:
      input name="name" type="text" value=""
    p
      label for="dept"  学部:
      input name="dept" type="text" value=""
    p
      label for="pref"  所在県:
      input name="pref" type="text" value=""
    p
      label for="deviation_value"  偏差値:
      input name="deviation_value" type="number" value=""
    p
      label for="exam_date"  試験日:
      input name="exam_date" type="date" value=""
    p
      label for="result_date"  合格発表日:
      input name="result_date" type="date" value=""
    p
      label for="affirmation_date"  確約書締め切り:
      input name="affirmation_date" type="date" value=""
    p
      label for="exam[]"  科目:
      input type="checkbox" name="exam[]" value="1" 国語
      input type="checkbox" name="exam[]" value="2" 数学
      input type="checkbox" name="exam[]" value="3" 物理
      input type="checkbox" name="exam[]" value="4" 化学
      input type="checkbox" name="exam[]" value="5" 英語
      input type="checkbox" name="exam[]" value="6" TOEICまたはTOEFL
      input type="checkbox" name="exam[]" value="7" 専門
      input type="checkbox" name="exam[]" value="8" 面接
      input type="checkbox" name="exam[]" value="9" 小論文
    p
      label for="document_url"  募集要項リンク:
      input name="document_url" type="url" value=""
    p
      label for="remark"  備考:
      input name="remark" type="text" value=""
    p
      input type="submit" value=("OK")